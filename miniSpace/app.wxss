@import 'style/weui.wxss';

/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

page { 
  background-color: #8fdce067;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}
.container2 {
  height: 100%;
  border-top: 1px solid transparent;
  border-bottom: 1px solid transparent;
  box-sizing: border-box;
}

.layout{
  background: #F06060;
  color: #fff;
}

.text-center{
  text-align: center;
}

.g-btn1{
  background: #FCAD26;
  color: #fff;
  width: 60%;
  margin-top: 500rpx;
}

.g-btn2{
  background: #FCAD26;
   background: rgb(82, 134, 143);
  color: #fff;
  width: 60%;
  margin-top: 200rpx;
}

.g-bt{
  background: #f3a51f;
  color: rgb(255, 255, 255);
  width: 50%;
  margin-top: 80rpx;
}
.g-b{
  background: #f3a51f;
  color: rgb(255, 255, 255);
  width:45%;
  height: 30%;
  margin-top: -50rpx;
}

.g-btn-active{
  background: #f3a51f;
}
.background{
  position: absolute;
  top: 0px;
  bottom: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.page__hd {
  padding: 40px;
}

.page__hd_control {
  position: relative;
  font-weight: bold;
  text-align: right;
  padding: 5px 10px;
  color: #e67300;
}

.page__bd {
  position: relative;
  margin-bottom: 30px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  position: fixed;
  font-weight: bold;
  bottom: 5px;
  right: 5px;
  padding: 5px 10px;
  color: #e67300;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
  margin: 20px 30px;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}
